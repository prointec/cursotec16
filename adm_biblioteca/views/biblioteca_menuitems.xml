        <menuitem id="menu_biblioteca_sub" name="Odoo Biblioteca" parent="menu_biblioteca" sequence="2"/>
        
        <menuitem id="menu_biblioteca_libros" name="Libros" parent="menu_biblioteca_sub" sequence="3"
                  action="libros_list_action"/>
        
    </data>
